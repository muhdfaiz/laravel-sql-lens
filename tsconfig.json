{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "node", "ssh2"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "ESNext"
    ],
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
}
